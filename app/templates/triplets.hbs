<h2>
  Triplets
</h2>
{{#mtg-loaded}}
  <form class="triplets-form">
    <label
      class="triplets-form__field triplets-form__field--primary
        {{if
          (and primary (not (card-exists primary)))
          "triplets-form__field--error"
        }}"
    >
      Primary Card
      {{input value=primary}}
    </label>
    <label
      class="triplets-form__field triplets-form__field--left
        {{if (and left (not (card-exists left))) "triplets-form__field--error"
        }}"
    >
      Left Card
      {{input value=left}}
    </label>
    <button class="triplets-form__swap" {{action "swap"}}>
      â†”
    </button>
    <label
      class="triplets-form__field tripletsform__field--right
        {{if (and right (not (card-exists right))) "triplets-form__field--error"
        }}"
    >
      Right Card
      {{input value=right}}
    </label>
  </form>
  <div class="triplets-photo">
    {{#if (card-exists primary)}}
      {{playtest-card
        name=primary
        width=265
        height=370
        class="triplets-photo__image triplets-photo__image--primary"
      }}
    {{/if}}
    {{#if (card-exists left)}}
      {{playtest-card
        name=left
        width=265
        height=370
        class="triplets-photo__image triplets-photo__image--left"
      }}
    {{/if}}
    {{#if (card-exists right)}}
      {{playtest-card
        name=right
        width=265
        height=370
        class="triplets-photo__image triplets-photo__image--right"
      }}
    {{/if}}
  </div>
{{/mtg-loaded}}